<!--予約済みルーム一覧-->

<div class="container-fiuld reservations">
  <h4 class="pb-4">予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr align="center">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
    </tr>
    </thead>
    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td><%= image_tag (reservation.room.image_name.url) %></td>
          <td><%= reservation.room.id %></td>
          <td>¥</td>
          <td><%= reservation.start_date %></td>
          <td><%= reservation.end_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>